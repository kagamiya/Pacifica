<% provide(:title, @user.name) %>
<% provide(:page_wrapper, "main_wrapper") %>
<div class="row">
  <%= render 'shared/aside_user_info', object: @user %>

  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>