<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info', object: current_user %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>

    <div class="col-md-8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="home_wrapper jumbotron">
    <h1>Pacifica</h1>
    <h2>Best music and your feel</h2>
    <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
    <p>or</p>
    <%= link_to "Log in", login_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>