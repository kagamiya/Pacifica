<%= form_tag(user_likes_path(current_user, @post), remote: true) do |f| %>
  <%= hidden_field_tag :post_id, @post.id %>
  <%= button_tag type: "submit", class: "like_button" do %>
  <i class="far fa-lg fa-heart"></i>
  <span class="like_count like"><%= @post.like_users.count %></span>
  <% end %>
<% end %>