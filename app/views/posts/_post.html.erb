<li class="post-<%= post.id %> post">
  <%= icon_for(post.user) %>
  <%= image_tag post.music.artwork %>
  <%= link_to post.user.name, post.user, class: "user" %>
  <a href="<%= post_path(post) %>", class="heading">
    <h2><%= post.music.name %> - <%= post.music.artist %></h2>
  </a>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user?(post.user) %>
      <%= link_to "edit", edit_post_path(post) %>
      <span> / </span>
      <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>